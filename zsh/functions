function code {
  cd ~/Code/$1
}

_code() {
  compadd `ls ~/Code`
}

# Completion for code() function
compdef _code code

function g {
  if [[ $# > 0 ]]
  then
    git $@
  else
    git status
  fi
}

# Complete g like git
compdef g=git

function commands {
  history | awk '{a[$2]++}END{for(i in a){print a[i] " " i}}' | sort -rn | head
}

function mux() {
  tmux new-session -c ~/Code/$1 -n 'editor' -s $1 -d
  tmux new-window -c ~/Code/$1 -n 'shell' -t $1
  tmux -2 attach-session -d
}
