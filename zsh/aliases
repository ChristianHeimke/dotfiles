# General
alias s='ag' # Always use 's' for search and use tool which is the fastest atm
alias v='vim'

# Heroku
alias hl='heroku logs --tail --remote'
alias hls='heroku logs --tail --remote staging'
alias hlp='heroku logs --tail --remote production'
alias hos='heroku open --remote staging'
alias hop='heroku open --remote production'

# Deployment
alias ds='git push staging master'
alias dp='git push production master'

# Ruby
alias zt='zeus test spec'
alias zc='zeus console'
